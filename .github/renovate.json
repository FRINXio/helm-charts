{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "includePaths": ["charts/frinx-machine/**"],
  "bumpVersion": "patch",
  "rebaseWhen": "behind-base-branch",
  "rollbackPrs":true,
  "labels": ["dependencies"],
  "prConcurrentLimit": 1,
  "ignoreDeps": ["grafana", "loki", "postgresql"],
  "commitMessageAction": "[frinx-machine] Update"
}
